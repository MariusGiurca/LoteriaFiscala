<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:textAlignment="center"
    android:background="@drawable/bonuri">

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Adauga Bon"
        android:id="@+id/adaungaBon"
        android:layout_marginTop="115dp"
        android:onClick="goToAdaugaBonActivity"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Cauta Bon"
        android:id="@+id/cautaBon"
        android:onClick="goToCautaBonActivity"
        android:layout_below="@+id/adaungaBon"
        android:layout_alignLeft="@+id/adaungaBon"
        android:layout_alignStart="@+id/adaungaBon"
        android:singleLine="false" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Afiseaza Bonuri"
        android:id="@+id/afiseazaBon"
        android:layout_below="@+id/cautaBon"
        android:layout_centerHorizontal="true"
        android:onClick="goToAfiseazaBonActivity" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Regulamet Oficial"
        android:id="@+id/regulamentLoterie"
        android:layout_below="@+id/afiseazaBon"
        android:layout_centerHorizontal="true"
        android:onClick="goToRegulamentOfical" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Pastrarea bonului in original este obligatorie!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textColor="#ffff2b18"
        android:textSize="15dp"
        android:textAlignment="gravity"
        android:textIsSelectable="false" />
</RelativeLayout>
